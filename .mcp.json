{
  "mcpServers": {
    "tavily": {
      "command": "op",
      "args": ["run", "--", "npx", "tavily-mcp@latest"],
      "env": {
        "TAVILY_API_KEY": "op://${VAULT_NAME}/tavily/credential"
      }
    },
    "azure-devops": {
      "command": "op",
      "args": [
        "run",
        "--",
        "sh",
        "-c",
        "npx @azure-devops/mcp@next \"$AZURE_DEVOPS_ORGANIZATION\" -a envvar"
      ],
      "env": {
        "ADO_MCP_AUTH_TOKEN": "op://${VAULT_NAME}/azure-devops/pat",
        "AZURE_DEVOPS_ORGANIZATION": "op://${VAULT_NAME}/azure-devops/organization"
      }
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest"]
    },
    "vscode": {
      "command": "npx",
      "args": ["-y", "vscode-mcp-server"]
    },
    "microsoft-365": {
      "command": "npx",
      "args": [
        "-y",
        "@softeria/ms-365-mcp-server",
        "--org-mode",
        "--preset",
        "personal,work,excel,search"
      ]
    }
  }
}
